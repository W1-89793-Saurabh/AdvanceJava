	@Override
	public int save(Customer cust) {
		String sql = "INSERT INTO customers(id, name, password, mobile, address, email, birth) VALUES (?, ?, ?, ?, ?, ?, ?)";
		int count = jdbctemplate.update(sql, cust.getId(), cust.getName(), cust.getPassword(), cust.getMobile(), cust.getAddress(), cust.getEmail(), cust.getBirth());
		return count;

	}

