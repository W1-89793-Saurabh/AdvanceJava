		@Override
		public int save(Book b) {
			String sql = "INSERT INTO books(id, name, author, subject, price) VALUES (?, ?, ?, ?, ?)";
			int count = jdbcTemplate.update(sql,b.getId(),b.getName(),b.getAuthor(),b.getSubject(),b.getPrice());
			return count;
		}

