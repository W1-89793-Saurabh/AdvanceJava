package com.sunbeam.controllers;

import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;
import com.sunbeam.daos.BookDao;
import com.sunbeam.entity.Book;

@CrossOrigin
@RequestMapping("/V4")
@RestController
public class BookControllerV4 {
	
	@Autowired
	private BookDao bookDao;

	@GetMapping("/books")
	public ResponseUtil<?> getAllBooks(){
		List<Book> list = bookDao.findAllBooks();
		return ResponseUtil.apiSuccess(list);
	}
	
	@GetMapping("/books/{id}")
	public ResponseUtil<?> getBookById(@PathVariable("id") int id){
		List<Book> b = bookDao.findBookById(id);
		if(b != null)
			return ResponseUtil.apiSuccess(b);
		return ResponseUtil.apiError("Book not found");
	}
	
	@PostMapping("/book")
	public ResponseUtil<?> saveBook(@RequestBody Book b){
		bookDao.create(b);
		return ResponseUtil.apiSuccess("Book added.");
	}
	
}