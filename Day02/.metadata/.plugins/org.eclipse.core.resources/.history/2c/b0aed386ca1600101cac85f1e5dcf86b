package com.sunbeam;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
//import java.sql.SQLException;
import java.util.Scanner;

public class App04 {
	public static final String DB_DRIVER = "com.mysql.cj.jdbc.Driver";
	public static final String DB_URL = "jdbc:mysql://localhost:3306/dmcdb";
	public static final String DB_USER = "dmc";
	public static final String DB_PASSWD = "dmc";
	
	static {
		try {
			Class.forName(DB_DRIVER);
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
			System.exit(1);
		}
	}

	public static void main(String[] args) throws Exception {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter Account From: ");
		int accFrom = sc.nextInt();
		System.out.print("Enter Account To: ");
		int accTo = sc.nextInt();
		System.out.print("Enter amount: ");
		int amount = sc.nextInt();
		
		Connection mycon = null;
		
		try(Connection con = DriverManager.getConnection(DB_URL, DB_USER, DB_PASSWD)){
			mycon = con;
			
			con.setAutoCommit(false);
			
			String sql = "UPDATE accounts SET balance = balance + ? WHERE id = ?";
			try(PreparedStatement stmt = con.prepareStatement(sql)) {
				// execute queries and process result
				stmt.setInt(1, -amount);
				stmt.setInt(2, accFrom);
				int count1 = stmt.executeUpdate();		
				stmt.setInt(1, amount);
				stmt.setInt(2, accTo);
				int count2 = stmt.executeUpdate();
				if(count1 != 1 || count2 != 1)
					throw new RuntimeException("Invalid Account");
				// if all queries are successful, commit tx
				System.out.println("Funds Tranferred.");
				con.commit();
			}
		}
		catch (Exception e) {
			System.out.println(e.getMessage());
			mycon.rollback();
		}
	}

}
